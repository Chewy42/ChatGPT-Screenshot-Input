{
  "manifest_version": 2,
  "name": "ChatGPT Screenshot Input",
  "version": "1.0",
  "description": "Capture screenshot and extract text for input in ChatGPT.",
  "icons": {
    "48": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}
